    <script>
        // Search contacts
        function searchContacts() {
            const searchTerm = document.getElementById('contact-search').value.toLowerCase();
            const cards = document.querySelectorAll('.contact-card');

            cards.forEach(card => {
                const name = card.querySelector('.contact-name').textContent.toLowerCase();
                const phone = card.querySelector('.contact-info-item:nth-child(1) span:last-child').textContent.toLowerCase();
                const email = card.querySelector('.contact-info-item:nth-child(2) span:last-child').textContent.toLowerCase();

                if (name.includes(searchTerm) || phone.includes(searchTerm) || email.includes(searchTerm)) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        }

        // Filter contacts
        function filterContacts(filter) {
            document.querySelectorAll('.filter-btn').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
            // In real implementation, filter contacts by category
        }

        // Toggle favorite
        async function toggleFavorite(contactId) {
            try {
                const response = await fetch(`/contacts/favorite/${contactId}`, {
                    method: 'POST'
                });

                if (response.ok) {
                    const btn = event.target;
                    btn.textContent = btn.textContent === '‚≠ê' ? '‚òÜ' : '‚≠ê';
                }
            } catch (error) {
                console.error('Error toggling favorite:', error);
            }
        }

        // Contact actions
        async function viewContact(contactId) {
            const modal = document.getElementById('view-contact-modal');
            const content = document.getElementById('view-contact-content');

            // Show modal with loading state
            modal.style.display = 'flex';
            content.innerHTML = '<div class="contact-details-loading"><p>Loading contact details...</p></div>';

            try {
                const response = await fetch(`/contacts/${contactId}`);
                if (!response.ok) throw new Error('Failed to load contact');

                const data = await response.json();
                const contact = data.contact;
                const events = data.events || [];

                // Build the contact details HTML
                let detailsHTML = `
                    <div class="contact-details-view">
                        <div class="contact-details-header">
                            <img src="${contact.photo || 'https://via.placeholder.com/150'}" alt="${contact.first_name} ${contact.last_name}" class="contact-details-photo">
                            <div class="contact-details-info">
                                <h3>${contact.first_name} ${contact.last_name}</h3>
                                ${contact.is_favorite ? '<span class="favorite-badge">‚≠ê Favorite</span>' : ''}
                            </div>
                        </div>

                        <div class="contact-details-section">
                            <h4>Contact Information</h4>
                            <div class="contact-details-grid">
                                ${contact.phone ? `
                                    <div class="detail-item">
                                        <span class="detail-label">üì± Phone:</span>
                                        <span class="detail-value">${contact.phone}</span>
                                    </div>
                                ` : ''}
                                ${contact.email ? `
                                    <div class="detail-item">
                                        <span class="detail-label">‚úâÔ∏è Email:</span>
                                        <span class="detail-value">${contact.email}</span>
                                    </div>
                                ` : ''}
                                ${contact.street_address ? `
                                    <div class="detail-item">
                                        <span class="detail-label">üìç Address:</span>
                                        <span class="detail-value">
                                            ${contact.street_address}${contact.city ? ', ' + contact.city : ''}${contact.state ? ', ' + contact.state : ''} ${contact.zip_code || ''}
                                        </span>
                                    </div>
                                ` : ''}
                            </div>
                        </div>

                        ${contact.notes ? `
                            <div class="contact-details-section">
                                <h4>Notes</h4>
                                <p class="contact-notes">${contact.notes}</p>
                            </div>
                        ` : ''}

                        <div class="contact-details-section">
                            <h4>Event History (${events.length} events)</h4>
                            ${events.length > 0 ? `
                                <div class="events-list">
                                    ${events.map(event => `
                                        <div class="event-item">
                                            <div class="event-item-date">
                                                <strong>${new Date(event.event_date).toLocaleDateString()}</strong>
                                                <span>${event.start_time.substring(0, 5)}</span>
                                            </div>
                                            <div class="event-item-details">
                                                <strong>${event.title}</strong>
                                                ${event.location ? `<span>üìç ${event.location}</span>` : ''}
                                                ${event.notes ? `<p>${event.notes}</p>` : ''}
                                            </div>
                                        </div>
                                    `).join('')}
                                </div>
                            ` : '<p class="no-events">No events with this contact yet.</p>'}
                        </div>

                        <div class="contact-details-actions">
                            <button class="btn-outline" onclick="editContactModal(${contactId})">Edit Contact</button>
                            <button class="btn-outline" onclick="closeViewContactModal()">Close</button>
                        </div>
                    </div>
                `;

                document.getElementById('view-contact-name').textContent = `${contact.first_name} ${contact.last_name}`;
                content.innerHTML = detailsHTML;

            } catch (error) {
                console.error('Error loading contact:', error);
                content.innerHTML = '<div class="contact-details-error"><p>Error loading contact details. Please try again.</p></div>';
            }
        }

        function closeViewContactModal() {
            document.getElementById('view-contact-modal').style.display = 'none';
        }

        // Edit contact - opens modal with contact data
        async function editContactModal(contactId) {
            closeViewContactModal();

            try {
                const response = await fetch(`/contacts/${contactId}`);
                if (!response.ok) throw new Error('Failed to load contact');

                const data = await response.json();
                const contact = data.contact;

                // Open edit modal and populate fields
                document.getElementById('contact-modal').style.display = 'flex';
                document.getElementById('contact-modal-title').textContent = 'Edit Contact';
                document.getElementById('contact-form').action = `/contacts/update/${contactId}`;
                document.getElementById('photo-preview').src = contact.photo || 'https://via.placeholder.com/150';
                document.getElementById('contact-firstname').value = contact.first_name;
                document.getElementById('contact-lastname').value = contact.last_name;
                document.getElementById('contact-phone').value = contact.phone || '';
                document.getElementById('contact-email').value = contact.email || '';
                document.getElementById('contact-address').value = contact.street_address || '';
                document.getElementById('contact-city').value = contact.city || '';
                document.getElementById('contact-state').value = contact.state || '';
                document.getElementById('contact-zip').value = contact.zip_code || '';
                document.getElementById('contact-notes').value = contact.notes || '';

            } catch (error) {
                console.error('Error loading contact for edit:', error);
                alert('Error loading contact for editing');
            }
        }

