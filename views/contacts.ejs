                color: #0d3b66;
            }

            .favorite-badge {
                display: inline-block;
                background: #ffd700;
                color: #333;
                padding: 5px 12px;
                border-radius: 20px;
                font-size: 14px;
                font-weight: 600;
            }

            .contact-details-section {
                margin-bottom: 30px;
            }

            .contact-details-section h4 {
                color: #0d3b66;
                margin-bottom: 15px;
                font-size: 18px;
                border-bottom: 1px solid #e0e0e0;
                padding-bottom: 8px;
            }

            .contact-details-grid {
                display: grid;
                gap: 15px;
            }

            .detail-item {
                display: grid;
                grid-template-columns: 140px 1fr;
                gap: 10px;
                padding: 10px;
                background: #f5f5f5;
                border-radius: 8px;
            }

            .detail-label {
                font-weight: 600;
                color: #555;
            }

            .detail-value {
                color: #333;
            }

            .contact-notes {
                background: #f5f5f5;
                padding: 15px;
                border-radius: 8px;
                border-left: 4px solid #0d3b66;
                color: #333;
                line-height: 1.6;
            }

            .events-list {
                display: flex;
                flex-direction: column;
                gap: 12px;
                max-height: 300px;
                overflow-y: auto;
            }

            .event-item {
                display: flex;
                gap: 15px;
                padding: 15px;
                background: #f9f9f9;
                border-radius: 8px;
                border-left: 4px solid #0d3b66;
            }

            .event-item-date {
                display: flex;
                flex-direction: column;
                min-width: 120px;
                color: #0d3b66;
                font-size: 14px;
            }

            .event-item-date strong {
                font-size: 16px;
                margin-bottom: 4px;
            }

            .event-item-details {
                flex: 1;
            }

            .event-item-details strong {
                display: block;
                color: #0d3b66;
                margin-bottom: 5px;
                font-size: 16px;
            }

            .event-item-details span {
                display: block;
                color: #666;
                font-size: 14px;
                margin-bottom: 5px;
            }

            .event-item-details p {
                margin: 8px 0 0 0;
                color: #555;
                font-size: 14px;
                line-height: 1.5;
            }

            .no-events {
                text-align: center;
                color: #999;
                padding: 20px;
                font-style: italic;
            }

            .contact-details-actions {
                display: flex;
                justify-content: flex-end;
                gap: 10px;
                margin-top: 20px;
                padding-top: 20px;
                border-top: 2px solid #e0e0e0;
            }

            .contact-details-loading,
            .contact-details-error {
                text-align: center;
                padding: 40px;
                color: #666;
            }

            .contact-details-error p {
                color: #d32f2f;
            }
        `;
        document.head.appendChild(style);
    </script>

    <%- include('partials/profile-modal') %>
</body>
</html>
