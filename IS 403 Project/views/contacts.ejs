<%- include('partials/header', {pageTitle: 'Contacts - Cal-Endure to the End'}) %>
<body class="app-page">
    <%- include('partials/app-navbar', {currentPage: 'contacts'}) %>

    <!-- Main Content -->
    <main class="app-main">
        <div class="app-container">
            <!-- Page Header -->
            <header class="page-header">
                <div>
                    <h1 class="page-title">Contacts</h1>
                    <p class="page-subtitle">Manage your network and relationships</p>
                </div>
                <div class="header-actions">
                    <button class="btn-primary" onclick="openAddContactModal()">
                        <span>+ Add Contact</span>
                    </button>
                </div>
            </header>

            <!-- Search and Filter -->
            <div class="search-bar-container">
                <div class="search-bar">
                    <span class="search-icon">üîç</span>
                    <input type="text" id="contact-search" placeholder="Search contacts by name, email, or phone..."
                           onkeyup="searchContacts()">
                </div>
                <div class="filter-buttons">
                    <button class="filter-btn active" onclick="filterContacts('all')">All</button>
                    <button class="filter-btn" onclick="filterContacts('recent')">Recent</button>
                    <button class="filter-btn" onclick="filterContacts('favorite')">Favorites</button>
                </div>
            </div>

            <!-- Contacts Stats -->
            <div class="contact-stats">
                <div class="stat-item">
                    <span class="stat-number"><%= typeof contacts !== 'undefined' ? contacts.length : 0 %></span>
                    <span class="stat-label">Total Contacts</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number"><%= typeof contacts !== 'undefined' ? contacts.filter(c => c.is_favorite).length : 0 %></span>
                    <span class="stat-label">Favorites</span>
                </div>
            </div>

            <!-- Contacts Grid -->
            <div class="contacts-grid" id="contacts-grid">
                <% if (typeof contacts !== 'undefined' && contacts.length > 0) { %>
                    <% contacts.forEach(function(contact) { %>
                        <div class="contact-card" data-contact-id="<%= contact.contact_id %>">
                            <div class="contact-card-header">
                                <img src="<%= contact.photo || 'https://via.placeholder.com/100' %>" alt="<%= contact.first_name %> <%= contact.last_name %>" class="contact-photo">
                                <button class="favorite-btn" onclick="toggleFavorite(event, <%= contact.contact_id %>)">
                                    <%= contact.is_favorite ? '‚≠ê' : '‚òÜ' %>
                                </button>
                            </div>
                            <div class="contact-card-body">
                                <h3 class="contact-name"><%= contact.first_name %> <%= contact.last_name %></h3>
                                <div class="contact-info">
                                    <% if (contact.phone) { %>
                                        <div class="contact-info-item">
                                            <span class="info-icon">üì±</span>
                                            <span><%= contact.phone %></span>
                                        </div>
                                    <% } %>
                                    <% if (contact.email) { %>
                                        <div class="contact-info-item">
                                            <span class="info-icon">‚úâÔ∏è</span>
                                            <span><%= contact.email %></span>
                                        </div>
                                    <% } %>
                                    <% if (contact.city && contact.state) { %>
                                        <div class="contact-info-item">
                                            <span class="info-icon">üìç</span>
                                            <span><%= contact.city %>, <%= contact.state %></span>
                                        </div>
                                    <% } %>
                                </div>
                                <div class="contact-stats-mini">
                                    <span class="mini-stat"><%= contact.event_count || 0 %> events together</span>
                                </div>
                            </div>
                            <div class="contact-card-actions">
                                <button class="btn-card" onclick="viewContact(<%= contact.contact_id %>)">View</button>
                                <form action="/contacts/delete/<%= contact.contact_id %>" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure? This will remove the contact from all events.')">
                                    <button type="submit" class="btn-card-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <!-- Empty state -->
                    <div class="empty-state">
                        <div class="empty-state-icon">üë•</div>
                        <h3>No contacts yet</h3>
                        <p>Start building your network by adding your first contact.</p>
                        <button class="btn-primary" onclick="openAddContactModal()">+ Add Your First Contact</button>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <!-- Add/Edit Contact Modal -->
    <div id="contact-modal" class="modal">
        <div class="modal-content modal-large">
            <div class="modal-header">
                <h2 id="contact-modal-title">Add New Contact</h2>
                <button class="modal-close" onclick="closeContactModal()">&times;</button>
            </div>
            <form id="contact-form" class="modal-form" action="/contacts/create" method="POST" enctype="multipart/form-data">
                <input type="hidden" id="edit-contact-id" name="contactId" value="">

                <div class="form-group photo-upload-group">
                    <label>Profile Photo</label>
                    <div class="photo-upload">
                        <img id="photo-preview" src="https://via.placeholder.com/150" alt="Preview" class="photo-preview">
                        <div class="photo-upload-btn">
                            <input type="file" id="contact-photo" name="photo" accept="image/*" onchange="previewPhoto(event)">
                            <label for="contact-photo" class="btn-outline">Choose Photo</label>
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="contact-firstname">First Name *</label>
                        <input type="text" id="contact-firstname" name="firstName" placeholder="John" required>
                    </div>
                    <div class="form-group">
                        <label for="contact-lastname">Last Name *</label>
                        <input type="text" id="contact-lastname" name="lastName" placeholder="Smith" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="contact-phone">Phone Number</label>
                        <input type="tel" id="contact-phone" name="phone" placeholder="(555) 123-4567">
                    </div>
                    <div class="form-group">
                        <label for="contact-email">Email Address</label>
                        <input type="email" id="contact-email" name="email" placeholder="john.smith@email.com">
                    </div>
                </div>

                <div class="form-group">
                    <label for="contact-address">Street Address</label>
                    <input type="text" id="contact-address" name="streetAddress" placeholder="123 Main Street">
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="contact-city">City</label>
                        <input type="text" id="contact-city" name="city" placeholder="Provo">
                    </div>
                    <div class="form-group">
                        <label for="contact-state">State</label>
                        <input type="text" id="contact-state" name="state" placeholder="UT" maxlength="2">
                    </div>
                    <div class="form-group">
                        <label for="contact-zip">Zip Code</label>
                        <input type="text" id="contact-zip" name="zipCode" placeholder="84601" maxlength="10">
                    </div>
                </div>

                <div class="form-group">
                    <label for="contact-notes">Notes (Optional)</label>
                    <textarea id="contact-notes" name="notes" rows="3" placeholder="Add any notes about this contact..."></textarea>
                </div>

                <div class="modal-actions">
                    <button type="button" class="btn-outline" onclick="closeContactModal()">Cancel</button>
                    <button type="submit" class="btn-primary" id="contact-submit-btn">Save Contact</button>
                </div>
            </form>
        </div>
    </div>

    <!-- View Contact Modal -->
    <div id="view-contact-modal" class="modal">
        <div class="modal-content modal-large">
            <div class="modal-header">
                <h2 id="view-contact-title">Contact Details</h2>
                <button class="modal-close" onclick="closeViewContactModal()">&times;</button>
            </div>
            <div class="view-contact-content">
                <div class="view-contact-header">
                    <img id="view-contact-photo" src="https://via.placeholder.com/150" alt="Contact Photo" class="view-contact-photo">
                    <div class="view-contact-info">
                        <h3 id="view-contact-name"></h3>
                        <div id="view-contact-details"></div>
                    </div>
                    <div class="view-contact-actions">
                        <button class="btn-secondary" onclick="editContactFromView()">Edit</button>
                    </div>
                </div>

                <div class="view-contact-events">
                    <h4>Events Together</h4>
                    <div id="view-contact-events-list" class="events-list">
                        <p class="no-events">No events with this contact yet.</p>
                    </div>
                </div>

                <div class="view-contact-notes" id="view-contact-notes-section" style="display: none;">
                    <h4>Notes</h4>
                    <p id="view-contact-notes-text"></p>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Current contact being viewed
        let currentViewContactId = null;
        let currentContactData = null;

        // Search contacts
        function searchContacts() {
            const searchTerm = document.getElementById('contact-search').value.toLowerCase();
            const cards = document.querySelectorAll('.contact-card');

            cards.forEach(card => {
                const name = card.querySelector('.contact-name').textContent.toLowerCase();
                const infoItems = card.querySelectorAll('.contact-info-item span:last-child');
                let matches = name.includes(searchTerm);

                infoItems.forEach(item => {
                    if (item.textContent.toLowerCase().includes(searchTerm)) {
                        matches = true;
                    }
                });

                card.style.display = matches ? 'block' : 'none';
            });
        }

        // Filter contacts
        function filterContacts(filter) {
            document.querySelectorAll('.filter-btn').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');

            // Redirect with filter parameter
            window.location.href = `/contacts?filter=${filter === 'favorite' ? 'favorites' : filter}`;
        }

        // Toggle favorite
        async function toggleFavorite(e, contactId) {
            e.stopPropagation();
            try {
                const response = await fetch(`/contacts/favorite/${contactId}`, {
                    method: 'POST'
                });

                if (response.ok) {
                    const data = await response.json();
                    const btn = e.target;
                    btn.textContent = data.is_favorite ? '‚≠ê' : '‚òÜ';
                    // Update the stats
                    const favCount = document.querySelectorAll('.favorite-btn').length;
                    let currentFavs = 0;
                    document.querySelectorAll('.favorite-btn').forEach(b => {
                        if (b.textContent.trim() === '‚≠ê') currentFavs++;
                    });
                    const statItems = document.querySelectorAll('.stat-number');
                    if (statItems[1]) {
                        statItems[1].textContent = currentFavs;
                    }
                }
            } catch (error) {
                console.error('Error toggling favorite:', error);
            }
        }

        // View contact with events
        async function viewContact(contactId) {
            try {
                const response = await fetch(`/contacts/${contactId}`);
                const data = await response.json();

                if (data.error) {
                    alert('Error loading contact: ' + data.error);
                    return;
                }

                currentViewContactId = contactId;
                currentContactData = data.contact;

                // Populate contact info
                document.getElementById('view-contact-photo').src = data.contact.photo || 'https://via.placeholder.com/150';
                document.getElementById('view-contact-name').textContent = `${data.contact.first_name} ${data.contact.last_name}`;

                // Build contact details HTML
                let detailsHtml = '';
                if (data.contact.phone) {
                    detailsHtml += `<div class="detail-item"><span class="detail-icon">üì±</span> ${data.contact.phone}</div>`;
                }
                if (data.contact.email) {
                    detailsHtml += `<div class="detail-item"><span class="detail-icon">‚úâÔ∏è</span> ${data.contact.email}</div>`;
                }
                if (data.contact.street_address || data.contact.city) {
                    let address = '';
                    if (data.contact.street_address) address += data.contact.street_address + '<br>';
                    if (data.contact.city) address += data.contact.city;
                    if (data.contact.state) address += ', ' + data.contact.state;
                    if (data.contact.zip_code) address += ' ' + data.contact.zip_code;
                    detailsHtml += `<div class="detail-item"><span class="detail-icon">üìç</span> ${address}</div>`;
                }
                document.getElementById('view-contact-details').innerHTML = detailsHtml;

                // Build events list
                const eventsList = document.getElementById('view-contact-events-list');
                if (data.events && data.events.length > 0) {
                    let eventsHtml = '';
                    data.events.forEach(event => {
                        const eventDate = new Date(event.event_date);
                        const dateStr = eventDate.toLocaleDateString('en-US', { weekday: 'short', month: 'short', day: 'numeric', year: 'numeric' });
                        const timeStr = event.start_time ? event.start_time.substring(0, 5) : '';
                        const typeClass = event.event_type ? event.event_type.toLowerCase() : 'spiritual';

                        eventsHtml += `
                            <div class="event-item ${typeClass}" onclick="goToEvent('${event.event_date}')">
                                <div class="event-item-info">
                                    <div class="event-item-title">${event.title}</div>
                                    <div class="event-item-meta">${dateStr} ${timeStr ? 'at ' + timeStr : ''}</div>
                                </div>
                                <div class="event-item-type">${event.event_type || 'Event'}</div>
                            </div>
                        `;
                    });
                    eventsList.innerHTML = eventsHtml;
                } else {
                    eventsList.innerHTML = '<p class="no-events">No events with this contact yet.</p>';
                }

                // Show notes if available
                if (data.contact.notes) {
                    document.getElementById('view-contact-notes-section').style.display = 'block';
                    document.getElementById('view-contact-notes-text').textContent = data.contact.notes;
                } else {
                    document.getElementById('view-contact-notes-section').style.display = 'none';
                }

                // Show modal
                document.getElementById('view-contact-modal').style.display = 'flex';

            } catch (error) {
                console.error('Error loading contact:', error);
                alert('Error loading contact details');
            }
        }

        // Navigate to calendar with specific date
        function goToEvent(eventDate) {
            const date = new Date(eventDate);
            const year = date.getFullYear();
            const month = date.getMonth() + 1;
            const day = date.getDate();
            window.location.href = `/calendar?year=${year}&month=${month}&day=${day}&view=day`;
        }

        // Close view contact modal
        function closeViewContactModal() {
            document.getElementById('view-contact-modal').style.display = 'none';
            currentViewContactId = null;
            currentContactData = null;
        }

        // Edit from view modal
        function editContactFromView() {
            if (currentContactData) {
                closeViewContactModal();
                editContact(currentViewContactId);
            }
        }

        // Edit contact
        async function editContact(contactId) {
            try {
                const response = await fetch(`/contacts/${contactId}`);
                const data = await response.json();

                if (data.error) {
                    alert('Error loading contact: ' + data.error);
                    return;
                }

                const contact = data.contact;

                // Update form for editing
                document.getElementById('contact-modal').style.display = 'flex';
                document.getElementById('contact-modal-title').textContent = 'Edit Contact';
                document.getElementById('contact-form').action = `/contacts/update/${contactId}`;
                document.getElementById('edit-contact-id').value = contactId;
                document.getElementById('contact-submit-btn').textContent = 'Update Contact';

                // Populate form fields
                document.getElementById('contact-firstname').value = contact.first_name || '';
                document.getElementById('contact-lastname').value = contact.last_name || '';
                document.getElementById('contact-phone').value = contact.phone || '';
                document.getElementById('contact-email').value = contact.email || '';
                document.getElementById('contact-address').value = contact.street_address || '';
                document.getElementById('contact-city').value = contact.city || '';
                document.getElementById('contact-state').value = contact.state || '';
                document.getElementById('contact-zip').value = contact.zip_code || '';
                document.getElementById('contact-notes').value = contact.notes || '';
                document.getElementById('photo-preview').src = contact.photo || 'https://via.placeholder.com/150';

            } catch (error) {
                console.error('Error loading contact for edit:', error);
                alert('Error loading contact');
            }
        }

        // Modal functions
        function openAddContactModal() {
            document.getElementById('contact-modal').style.display = 'flex';
            document.getElementById('contact-modal-title').textContent = 'Add New Contact';
            document.getElementById('contact-form').action = '/contacts/create';
            document.getElementById('contact-form').reset();
            document.getElementById('edit-contact-id').value = '';
            document.getElementById('contact-submit-btn').textContent = 'Save Contact';
            document.getElementById('photo-preview').src = 'https://via.placeholder.com/150';
        }

        function closeContactModal() {
            document.getElementById('contact-modal').style.display = 'none';
        }

        // Photo preview
        function previewPhoto(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('photo-preview').src = e.target.result;
                }
                reader.readAsDataURL(file);
            }
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            const contactModal = document.getElementById('contact-modal');
            const viewModal = document.getElementById('view-contact-modal');
            if (event.target === contactModal) {
                closeContactModal();
            }
            if (event.target === viewModal) {
                closeViewContactModal();
            }
        }

        // User dropdown toggle
        const userMenu = document.querySelector('.user-menu');
        if (userMenu) {
            userMenu.addEventListener('click', function(e) {
                this.querySelector('.user-dropdown').classList.toggle('show');
            });
        }

        document.addEventListener('click', function(e) {
            if (!e.target.closest('.user-menu')) {
                document.querySelectorAll('.user-dropdown').forEach(dropdown => {
                    dropdown.classList.remove('show');
                });
            }
        });
    </script>

    <style>
        /* View Contact Modal Styles */
        .view-contact-content {
            padding: 20px;
        }
        .view-contact-header {
            display: flex;
            align-items: flex-start;
            gap: 20px;
            margin-bottom: 24px;
            padding-bottom: 20px;
            border-bottom: 1px solid #eee;
        }
        .view-contact-photo {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
        }
        .view-contact-info {
            flex: 1;
        }
        .view-contact-info h3 {
            margin: 0 0 12px 0;
            font-size: 24px;
        }
        .detail-item {
            margin-bottom: 8px;
            color: #555;
        }
        .detail-icon {
            margin-right: 8px;
        }
        .view-contact-events h4,
        .view-contact-notes h4 {
            margin: 0 0 12px 0;
            color: #333;
        }
        .events-list {
            max-height: 300px;
            overflow-y: auto;
        }
        .event-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 12px;
            margin-bottom: 8px;
            border-radius: 8px;
            cursor: pointer;
            transition: transform 0.2s;
        }
        .event-item:hover {
            transform: translateX(4px);
        }
        .event-item.spiritual { background: #e8f0fe; border-left: 3px solid #4285f4; }
        .event-item.social { background: #fef3e8; border-left: 3px solid #f5a623; }
        .event-item.intellectual { background: #e8f5e9; border-left: 3px solid #34a853; }
        .event-item.physical { background: #fce8e8; border-left: 3px solid #ea4335; }
        .event-item.romantic { background: #f3e8fe; border-left: 3px solid #9c27b0; }
        .event-item-title {
            font-weight: 600;
            margin-bottom: 4px;
        }
        .event-item-meta {
            font-size: 12px;
            color: #666;
        }
        .event-item-type {
            font-size: 12px;
            padding: 4px 8px;
            background: rgba(0,0,0,0.1);
            border-radius: 4px;
        }
        .no-events {
            color: #999;
            font-style: italic;
            text-align: center;
            padding: 20px;
        }
        .view-contact-notes {
            margin-top: 20px;
            padding-top: 20px;
            border-top: 1px solid #eee;
        }
        .view-contact-notes p {
            color: #555;
            white-space: pre-wrap;
        }

        /* Empty state styles */
        .empty-state {
            grid-column: 1 / -1;
            text-align: center;
            padding: 60px 20px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }
        .empty-state-icon {
            font-size: 64px;
            margin-bottom: 16px;
        }
        .empty-state h3 {
            margin: 0 0 8px 0;
            color: #333;
            font-size: 24px;
        }
        .empty-state p {
            margin: 0 0 24px 0;
            color: #666;
        }
    </style>
</body>
</html>
