<%- include('partials/header', {pageTitle: 'Create Account - Cal-Endure to the End'}) %>
<body class="auth-page">
    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-header">
                <a href="/" class="auth-logo">
                    <span class="logo-icon">üìÖ</span>
                    <span class="logo-text">Cal-Endure</span>
                </a>
                <h1>Create your account</h1>
                <p>Start planning like a missionary today</p>
            </div>

            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-error">
                    <%= error %>
                </div>
            <% } %>

            <form action="/signup" method="POST" class="auth-form">
                <div class="form-row">
                    <div class="form-group">
                        <label for="firstName">First Name</label>
                        <input type="text" id="firstName" name="firstName" placeholder="John" required>
                    </div>
                    <div class="form-group">
                        <label for="lastName">Last Name</label>
                        <input type="text" id="lastName" name="lastName" placeholder="Smith" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="you@example.com" required>
                </div>

                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" placeholder="eldersmith" pattern="[a-zA-Z0-9_]{3,30}" title="3-30 characters, letters, numbers, and underscores only" required>
                    <small class="form-hint">Letters, numbers, and underscores only</small>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" placeholder="Min 6 characters" minlength="6" required>
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword">Confirm Password</label>
                        <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm password" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="mission">Mission (Optional)</label>
                    <input type="text" id="mission" name="mission" placeholder="California San Diego Mission">
                </div>

                <button type="submit" class="btn-primary btn-full">Create Account</button>
            </form>

            <div class="auth-footer">
                <p>Already have an account? <a href="/login">Sign in</a></p>
            </div>
        </div>

        <div class="auth-side">
            <div class="side-content">
                <h2>Why Cal-Endure?</h2>
                <p>Built by RMs who understand the power of missionary discipline.</p>
                <ul class="feature-list">
                    <li><span>‚úùÔ∏è</span> Spiritual Goals</li>
                    <li><span>üë•</span> Social Goals</li>
                    <li><span>üìö</span> Intellectual Goals</li>
                    <li><span>üí™</span> Physical Goals</li>
                    <li><span>‚ù§Ô∏è</span> Romantic Goals</li>
                </ul>
            </div>
        </div>
    </div>

    <script>
        // Password confirmation validation
        document.getElementById('confirmPassword').addEventListener('input', function() {
            const password = document.getElementById('password').value;
            if (password !== this.value) {
                this.setCustomValidity('Passwords do not match');
            } else {
                this.setCustomValidity('');
            }
        });

        document.getElementById('password').addEventListener('input', function() {
            const confirm = document.getElementById('confirmPassword');
            if (confirm.value && this.value !== confirm.value) {
                confirm.setCustomValidity('Passwords do not match');
            } else {
                confirm.setCustomValidity('');
            }
        });
    </script>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body.auth-page {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        .auth-container {
            display: flex;
            max-width: 900px;
            width: 100%;
            background: white;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        }
        .auth-card {
            flex: 1;
            padding: 40px;
        }
        .auth-header {
            text-align: center;
            margin-bottom: 24px;
        }
        .auth-logo {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
            color: #333;
            margin-bottom: 20px;
        }
        .logo-icon {
            font-size: 28px;
        }
        .logo-text {
            font-size: 20px;
            font-weight: 700;
        }
        .auth-header h1 {
            font-size: 26px;
            color: #333;
            margin-bottom: 8px;
        }
        .auth-header p {
            color: #666;
        }
        .alert {
            padding: 12px 16px;
            border-radius: 8px;
            margin-bottom: 16px;
            font-size: 14px;
        }
        .alert-error {
            background: #fee;
            color: #c00;
            border: 1px solid #fcc;
        }
        .auth-form {
            display: flex;
            flex-direction: column;
            gap: 16px;
        }
        .form-row {
            display: flex;
            gap: 12px;
        }
        .form-row .form-group {
            flex: 1;
        }
        .form-group {
            display: flex;
            flex-direction: column;
            gap: 4px;
        }
        .form-group label {
            font-size: 13px;
            font-weight: 500;
            color: #333;
        }
        .form-group input {
            padding: 10px 14px;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 15px;
            transition: border-color 0.2s;
        }
        .form-group input:focus {
            outline: none;
            border-color: #2ec0f9;
        }
        .form-hint {
            font-size: 11px;
            color: #888;
        }
        .btn-primary {
            background: #2ec0f9;
            color: white;
            border: none;
            padding: 14px 24px;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.2s, transform 0.1s;
            margin-top: 8px;
        }
        .btn-primary:hover {
            background: #1aa3d9;
        }
        .btn-primary:active {
            transform: scale(0.98);
        }
        .btn-full {
            width: 100%;
        }
        .auth-footer {
            text-align: center;
            margin-top: 20px;
            padding-top: 20px;
            border-top: 1px solid #eee;
        }
        .auth-footer p {
            color: #666;
            font-size: 14px;
        }
        .auth-footer a {
            color: #2ec0f9;
            text-decoration: none;
            font-weight: 600;
        }
        .auth-footer a:hover {
            text-decoration: underline;
        }
        .auth-side {
            width: 300px;
            background: linear-gradient(135deg, #2ec0f9 0%, #1a8ccc 100%);
            padding: 40px;
            display: flex;
            align-items: center;
        }
        .side-content {
            color: white;
        }
        .side-content h2 {
            font-size: 22px;
            margin-bottom: 12px;
        }
        .side-content p {
            opacity: 0.9;
            margin-bottom: 20px;
            line-height: 1.5;
            font-size: 14px;
        }
        .feature-list {
            list-style: none;
        }
        .feature-list li {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 6px 0;
            font-size: 14px;
        }
        .feature-list span {
            font-size: 18px;
        }
        @media (max-width: 768px) {
            .auth-container {
                flex-direction: column;
            }
            .auth-side {
                width: 100%;
                padding: 24px;
            }
            .auth-card {
                padding: 24px;
            }
            .form-row {
                flex-direction: column;
                gap: 16px;
            }
        }
    </style>
</body>
</html>
